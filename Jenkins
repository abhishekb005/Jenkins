pipeline {
    agent any

    stages {
        stage('Hello') {
            steps {
                echo 'Hello World from abhishek'
            }
        }
    stage('files') {
            steps {
                sh'ls -a'
            }
        }
    stage('run test') {
            steps {
                sh'source venv/bin/activate'
                sh'pytest test'
            }
        }
    }
}
